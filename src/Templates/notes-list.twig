{% extends "layout.twig" %}

{% block title %}
    Your Notes
{% endblock title %}

{% block head %}
    <style>
        .card-body {
            max-width: fit-content !important;
            background-color: transparent !important;
            height: 12em;
            overflow: hidden;
        }
    </style>
{% endblock head %}

{% block main %}

    <main class="container m-4">
        <h1>Your notes</h1>

        <div class="row">
            <div class="col-sm-4 d-flex align-items-center justify-content-center">
                <a href="{{ full_url_for('Notes Create') }}" class="btn btn-primary btn-lg" role="button">Create new</a>
            </div>
            {% for note in notes %}
                <div class="col-sm-4 mb-4">
                    <div class="card bg-info">
                        <h5 class="card-header"><a href="{{ full_url_for('Notes View', { 'note_id': note.note_id, 'note_name': note.name }) }}">{{ note.name }}</a></h5>
                        <div class="card-body m-2">
                            <div class="card-text">{{ note.content | raw }}</div>
                        </div>
                    </div>
                </div>
            {% endfor %}
            <div class="col-sm-4 d-flex align-items-center justify-content-center">
                <a href="{{ full_url_for('Notes Create') }}" class="btn btn-primary btn-lg" role="button">Create new</a>
            </div>
        </div>

    </main>

{% endblock main %}